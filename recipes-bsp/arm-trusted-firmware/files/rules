ifneq ($(DEB_BUILD_GNU_TYPE),$(DEB_HOST_GNU_TYPE))
export CROSS_COMPILE=$(DEB_HOST_GNU_TYPE)-
endif

PARALLEL_BUILD=-j $(shell echo $$(($$(nproc) * 2)))

override_dh_auto_build:
	CFLAGS= LDFLAGS= $(MAKE) $(PARALLEL_BUILD) PLAT=k3 SPD=opteed UART=1

%:
	dh $@
